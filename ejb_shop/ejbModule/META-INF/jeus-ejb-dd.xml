<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<jeus-ejb-dd xmlns="http://www.tmaxsoft.com/xml/ns/jeus" version="6.0">
    <module-info/>
    <beanlist>
        <jeus-bean>
            <ejb-name>UserManager</ejb-name>
            <export-name>UserManager</export-name>
            <export-port>0</export-port>
            <single-vm-only>false</single-vm-only>
            <local-invoke-optimize>true</local-invoke-optimize>
            <thread-max>50</thread-max>
            <object-management>
                <bean-pool>
                    <pool-min>15</pool-min>
                    <pool-max>100</pool-max>
                </bean-pool>
                <connect-pool>
                    <pool-min>35</pool-min>
                    <pool-max>100</pool-max>
                </connect-pool>
                <capacity>10000</capacity>
                <passivation-timeout>-1</passivation-timeout>
                <disconnect-timeout>-1</disconnect-timeout>
            </object-management>
        </jeus-bean>
        <jeus-bean>
            <ejb-name>CategoryManager</ejb-name>
            <export-name>CategoryManager</export-name>
            <export-port>0</export-port>
            <single-vm-only>false</single-vm-only>
            <local-invoke-optimize>true</local-invoke-optimize>
            <thread-max>50</thread-max>
            <object-management>
                <bean-pool>
                    <pool-min>15</pool-min>
                    <pool-max>100</pool-max>
                </bean-pool>
                <connect-pool>
                    <pool-min>35</pool-min>
                    <pool-max>100</pool-max>
                </connect-pool>
                <capacity>10000</capacity>
                <passivation-timeout>-1</passivation-timeout>
                <disconnect-timeout>-1</disconnect-timeout>
            </object-management>
        </jeus-bean>
        
<!-- CMP -->
        <jeus-bean>
            <ejb-name>Category</ejb-name>
            <local-export-name>Category</local-export-name>
            <schema-info>
                <table-name>CATEGORY</table-name>
                <cm-field>
                    <field>name</field>
                    <column-name>NAME</column-name>
                </cm-field>
                <cm-field>
                    <field>text</field>
                    <column-name>TEXT</column-name>
                </cm-field>    
<!--                            
                <prim-key-field>
                    <field>name</field>
                    <column-name>NAME</column-name>
                </prim-key-field>
                <creating-table>
                    <use-existing-table/>
                </creating-table>
                <deleting-table>true</deleting-table>
-->
                <db-vendor>oracle</db-vendor>
                <data-source-name>dbsource</data-source-name>
            </schema-info>
<!--            
            <database-insert-delay>ejbPostCreate</database-insert-delay>
-->
        </jeus-bean>        
        
        
        <jeus-bean>
            <ejb-name>Item</ejb-name>
            <local-export-name>Item</local-export-name>
            <schema-info>
                <table-name>ITEM</table-name>
                <cm-field>
                    <field>id</field>
                    <column-name>ID</column-name>
                </cm-field>
                <cm-field>
                    <field>categoryname</field>
                    <column-name>CATEGORYNAME</column-name>
                </cm-field>    
                <cm-field>
                    <field>name</field>
                    <column-name>NAME</column-name>
                </cm-field>
                <cm-field>
                    <field>price</field>
                    <column-name>PRICE</column-name>
                </cm-field> 
                <cm-field>
                    <field>text</field>
                    <column-name>TEXT</column-name>
                </cm-field>
                <cm-field>
                    <field>regdate</field>
                    <column-name>REGDATE</column-name>
                </cm-field> 
                <db-vendor>oracle</db-vendor>
                <data-source-name>dbsource</data-source-name>
            </schema-info>
        </jeus-bean>        
    

        <jeus-bean>
            <ejb-name>Users</ejb-name>
            <local-export-name>Users</local-export-name>
            <schema-info>
                <table-name>USERS</table-name>
                <cm-field>
                    <field>id</field>
                    <column-name>ID</column-name>
                </cm-field>
                <cm-field>
                    <field>name</field>
                    <column-name>NAME</column-name>
                </cm-field>    
                <cm-field>
                    <field>passwd</field>
                    <column-name>PASSWD</column-name>
                </cm-field>
                <cm-field>
                    <field>userlevel</field>
                    <column-name>USERLEVEL</column-name>
                </cm-field> 
                <prim-key-field>
                    <field>id</field>
                    <column-name>ID</column-name>
                </prim-key-field>                
                <db-vendor>oracle</db-vendor>
                <data-source-name>dbsource</data-source-name>
            </schema-info>
        </jeus-bean>        

        <jeus-bean>
            <ejb-name>Buylog</ejb-name>
            <local-export-name>Buylog</local-export-name>
            <export-port>0</export-port>
            <single-vm-only>false</single-vm-only>
            <local-invoke-optimize>true</local-invoke-optimize>
            <thread-max>50</thread-max>
            <object-management>
                <bean-pool>
                    <pool-min>15</pool-min>
                    <pool-max>100</pool-max>
                </bean-pool>
                <connect-pool>
                    <pool-min>35</pool-min>
                    <pool-max>100</pool-max>
                </connect-pool>
                <capacity>10000</capacity>
                <passivation-timeout>-1</passivation-timeout>
                <disconnect-timeout>-1</disconnect-timeout>
            </object-management>
        </jeus-bean>       
                                           
    </beanlist>
</jeus-ejb-dd>